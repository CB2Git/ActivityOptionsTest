<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/makeCustomAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="makeCustomAnimation"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/makeScaleUpAnimation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:src="@drawable/h2" />

    <Button
        android:id="@+id/makeThumbnailScaleUpAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="makeThumbnailScaleUpAnimation "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/makeSceneTransitionAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="makeSceneTransitionAnimation"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/makeSceneTransitionAnimation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="makeSceneTransitionAnimation2"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/makeClipRevealAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="makeClipRevealAnimation"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/share_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/h2" />
</LinearLayout>